* {
    box-sizing:    border-box;
}
html, body {
    margin:                   0;
    padding:                  0;
    font-family:              "Microsoft YaHei", "WenQuanYi Micro Hei", STXihei,
                              sans-serif, monospace;
    background-color:         #FFFFCC;
    background-attachment:    fixed;
    overflow-x:               hidden;
}
td { padding: 5px; }
img { border: 0px; }

#_Body {
    margin: auto;
    width: 1200px;
}
#iWB {
    margin-right: 0px;
    box-shadow: 0 4px 10px #666;
}
#iWB :fullscreen {
    background-color: #FFFFCC;
}
#iWB .turn-page {
    background-color: #FFFFCC;
    overflow: hidden;
}
#iWB .odd { cursor: e-resize; }
#iWB .even { cursor: w-resize; }
#iWB h3 { margin: 10px; }
.PageContent {
    width:      100%;
    height:     100%;
}
.PageContent a {
    display: block;
    position: absolute;
    border-bottom: 1px dashed gray;
}
.PageContent a:hover {
    background-color: pink;
    opacity: 0.3;
}
.FootBar {
    position: absolute;
    bottom: 0px;
    width: 100%;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    background-color: black;
    color: white;
    opacity: 0.75;
    z-index: 3;
}
.FootBar span {
    float: right;
    margin: 5px;
}

.Title { border-bottom: 3px solid orange; }
.TipBox {
    background-color: #FFFFCC;
    padding-top: 5px;
    padding-bottom: 5px;
}
.SideNav li {
    list-style-type: none;
    box-shadow: 0 2px 5px #666;
    margin-top: 5px;
    margin-left: -30px;
    text-align: center;
    width: 130px;
}
.SideNav li a {
    text-decoration: none;
    display: block;
    padding: 3px 10px;
    background: yellow;
}
.SideNav li a:hover {
    background: pink;
}
#Book_Nav {
    height: 300px;
    width: 180px;
    background: #FFFFCC;
    overflow: auto;
    overflow-x: hidden;
}
#Book_Nav li {
    list-style: none;
    min-width: 110px;
}
#Book_Nav a {
    text-decoration: none;
    padding: 5px;
    display: block;
}
#Book_Nav a:hover {
    border: 1px solid blue;
    border-radius: 5px;
}
#ReadTips, #CR_Info {
    position: relative;
    float: left;
    margin: 25px;
    max-width: 425px;
}
#AA {
    clear: both;
    float: right;
    margin: 5px;
}

@media screen and (max-width:  760px) {
    .noMobile {
        display:    none;
    }
}
